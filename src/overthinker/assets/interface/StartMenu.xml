<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<nifty>

    <!-- load styles -->
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="start_screen" controller="client.ClientMain">
        <layer childLayout="horizontal" id="title">
            <image filename="overthinker.assets/interface/overthinker-title2.png" height="100%" width="100%" />
        </layer>
        <layer id="layer" backgroundColor="#0000" childLayout="center">
        <panel id="panel" align="left" valign="bottom"  childLayout="vertical" visibleToMouse="true">

        <image id="btnStartUnder" filename="overthinker.assets/interface/btnUnder.png" align="left" childLayout="overlay">
            <effect>
                <onStartScreen name="hide" targetElement="btnUnder"/>
                <onStartHover name="show" targetElement="btnUnder" onStartEffect="methodToBeCalledWhenEffectStarted()"/>
                <onEndHover name="hide" targetElement="btnUnder" onStartEffect="methodToBeCalledWhenEffectStarted()"/>
            </effect>
            <interact onClick="startGame()"/>
            <image id="btnUnder" name="hide" filename="overthinker.assets/interface/btnUnder.png" align="left" />
        </image>
            <image id="btnStartOver" filename="overthinker.assets/interface/btnOver.png" align="left" childLayout="overlay">
                <effect>
                    <onStartScreen name="hide" targetElement="btnOver"/>
                    <onStartHover name="show" targetElement="btnOver" onStartEffect="methodToBeCalledWhenEffectStarted()"/>
                    <onEndHover name="hide" targetElement="btnOver" onStartEffect="methodToBeCalledWhenEffectStarted()"/>
                </effect>
                <interact onClick="startGame()"/>
                <image id="btnOver" name="hide" filename="overthinker.assets/interface/btnOver.png" align="left" />
            </image>

            <image id="btnQuitGame" filename="overthinker.assets/interface/btnQuit.png" align="left" childLayout="overlay">
                <effect>
                    <onStartScreen name="hide" targetElement="btnQuit"/>
                    <onStartHover name="show" targetElement="btnQuit" onStartEffect="methodToBeCalledWhenEffectStarted()"/>
                    <onEndHover name="hide" targetElement="btnQuit" onStartEffect="methodToBeCalledWhenEffectStarted()"/>
                </effect>
                <interact onClick="quitGame()"/>
                <image id="btnQuit" name="hide" filename="overthinker.assets/interface/btnQuit.png" align="left" />
            </image>
        </panel>
        </layer>
    </screen>

    <screen id="loading_screen">
        <layer childLayout="center" id="layer1" backgroundColor="#FFFFFF">
            <image filename="overthinker.assets/interface/loading.png" height="20%" id="backgroundSky" width="20%"/>
        </layer>
    </screen>

    <screen id="loaded_screen"/>




</nifty>